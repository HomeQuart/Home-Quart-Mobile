<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:background="#ff000000">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:background="#ff000000"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profileicon"
            android:id="@+id/banner"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robert Jim Placencia"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/patient_name"
            android:layout_toRightOf="@+id/banner"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purok Mahogany"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:id="@+id/purok"
            android:layout_below="@+id/patient_name"
            android:layout_toRightOf="@+id/banner"
            />
        </RelativeLayout>
         <Button
                android:text="Swab Test Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:id="@+id/btnSwabTestResult"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
         <Button
                android:text="Recommended Medicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:id="@+id/btnRecommendedMedicines"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginTop="0.0dp" />
         <Button
                android:text="Specify Symptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:id="@+id/btnSwabTestResult"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
         <Button
                android:text="Modify Temperature Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:id="@+id/btnSwabTestResult"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
         <Button
                android:text="Patient's Temperature Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:id="@+id/btnSwabTestResult"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        <TableLayout
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g3"
            android:backgroundTint="@android:color/darker_gray"
            android:background="#ff000000">
          <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:text="Latest Temperature:"/>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:backgroundTint="@android:color/white"
                    android:background="#ff000000"                
                    android:textColor="@android:color/holo_red_dark"
                    android:text="36.8 Â°C"/>
         </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:text="Latest Temperature Report:"/>
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:backgroundTint="@android:color/white"
                    android:background="#ff000000"                
                    android:textColor="@android:color/holo_red_dark"
                    android:text="11/23/2021"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g4"
            android:backgroundTint="@android:color/white"
            android:background="#ff000000"
            android:layout_below="@+id/g1"
            android:layout_margin="8dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="COVID-19 Test:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="NEGATIVE"
                    android:layout_gravity="right"/> 
            </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Symptoms:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Fever"
                    android:layout_gravity="right"/> 
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:background="#ff000000"
            android:layout_below="@+id/g3"
            android:layout_margin="8dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Quarantine Period:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="12d 14h 43m"
                    android:layout_gravity="right"/> 
            </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Temp. Reports Everyday:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="2"
                    android:layout_gravity="right"/> 
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Medicine Intake:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Paracetamol"
                    android:layout_gravity="right"/> 
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Dosage:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="3x a day"
                    android:layout_gravity="right"/> 
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:text="Undergone Swab Test:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="Yes"
                    android:layout_gravity="right"/> 
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g5"
            android:orientation="vertical" 
            android:backgroundTint="@android:color/white"
            android:background="#ff000000"
            android:layout_below="@+id/g4"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="Doctor's Recommendation"/>
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_light"
                android:text="Stay in the isolation area until the fever is cured." />
        </LinearLayout>
</LinearLayout>