<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:background="#ff000000"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom=""
        android:gravity="center"
        android:paddingTop="5px"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="BHW Edit Profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1196578"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/patient_id"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:background="#ff000000" >
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/lastname"
            android:hint="Last Name:"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="text" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/Firstname"
            android:hint="Firstname:"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="text" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/middlename"
            android:hint="Midlle Name:"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="text" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/age"
            android:hint="Age:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="number" />
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:background="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="31.5dp">
            <TextView
                android:layout_width="82.5dp"
                android:layout_height="31.5dp"
                android:text="Gender:"
                android:id="@+id/textgender"
                android:textSize="18dp"
                android:gravity="left"
                android:paddingTop="5px"
                android:textStyle="italic"
                android:textColor="@android:color/black"/>
            <RadioGroup
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/radioGroup1"
                android:textAlignment="textStart"
                android:layout_toRightOf="@+id/textplace"
                android:layout_marginLeft="200px">
                <RadioButton
                    android:layout_width="81.0dp"
                    android:layout_height="43.5dp"
                    android:checked="true"
                    android:text="Male"
                    android:id="@+id/radioButton1"
                    android:textSize="18dp"
                    android:textStyle="italic"/>
                <RadioButton
                    android:layout_width="179.0dp"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/radioButton2"
                    android:textSize="18dp"
                    android:textStyle="italic"/>
            </RadioGroup>
        </RelativeLayout>
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/contactNum"
            android:hint="Contact Number:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="number" />
      <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/email"
            android:hint="Email:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="textEmailAddress" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/currentpassword"
            android:hint="Current Password:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="textPassword" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/password"
            android:hint="New Password:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="textPassword" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6.5dp"
            android:id="@+id/confirmpassword"
            android:hint="Confirm Password:"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="textPassword" />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Save"
            android:layout_width="168.3dp"
            android:layout_height="71.7dp"
            android:textSize="20dp"
            android:id="@+id/btnLogIn"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_green_light"/>

    </LinearLayout>

</LinearLayout> 