<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:background="#ff000000"
    android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom=""
            android:gravity="center"
            android:paddingTop="5px"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Temperature Progress"/>
        <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:background="#ff000000">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="Last Date and Time Reported:"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_light"
                android:text="Stay in the isolation area for the remaining days until the fever is cured." />

        <TableLayout
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g3"
            android:backgroundTint="@android:color/darker_gray"
            android:background="#ff000000">
          <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:text="Morning:"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:background="#ff000000"/>
                <EditText
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="200.0dp"
                    android:layout_height="30dp"
                    android:id="@+id/morningtemp"
                    android:background="@android:color/white"
                    android:inputType="numberDecimal" />
         </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:text="Noon:"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:background="#ff000000"/>
                <EditText
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="200.0dp"
                    android:layout_height="30dp"
                    android:id="@+id/noontemp"
                    android:background="@android:color/white"
                    android:inputType="numberDecimal" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:text="Evening:"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:background="#ff000000"/>

                <EditText
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="200.0dp"
                    android:layout_height="30dp"
                    android:id="@+id/eveningtemp"
                    android:background="@android:color/white"
                    android:inputType="numberDecimal" />
        </TableRow>
        </TableLayout>
    </LinearLayout>
        <LinearLayout
        android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g5"
            android:orientation="vertical" 
            android:backgroundTint="@android:color/white"
            android:background="#ff000000"
            android:layout_below="@+id/g4"
            android:layout_margin="10dp">
                  <microcharts.droid.ChartView android:id="@+id/Chart6"  
                                  android:layout_width="match_parent"  
                                  android:layout_height="160dp"/>  
        https://www.c-sharpcorner.com/blogs/xamarin-android-microcharts
        </LinearLayout>
</LinearLayout>