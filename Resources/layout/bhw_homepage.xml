<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:background="#ff000000"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="216.6dp"
            android:layout_height="80dp"
            android:src="@drawable/homequartbanner"
            android:id="@+id/banner"
            android:layout_gravity="center"/>
        <ImageButton
            android:src="@drawable/profileicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnProfile"
            android:background="@drawable/profileicon"
            android:layout_margin="10dp" 
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BHW:"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sheryl V. Lapus"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
    <Button
        android:text="Patients Quarantine Information"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:textSize="25dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/btnTemperature Progress"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp" />
    <Button
        android:text="Patients Under Quarantine"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:textSize="25dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/btnSpecifySymptoms"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp" />
    <Button
        android:text="Patients Successfully Undergone Quarantine"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:textSize="25dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/btnRecommendedMedicines"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp" />
    <Button
        android:text="Contact Helpline"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:textSize="25dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/btnContactHelpline"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp" />
</LinearLayout>