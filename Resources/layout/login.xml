<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:background="#ff000000"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom=""
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/homequartbanner"
        android:id="@+id/banner"
        android:paddingTop="15px"
        android:layout_marginRight="0.0dp" />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0.0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350.0dp"
        android:backgroundTint="@android:color/darker_gray"
        android:background="#ff000000"
        android:layout_marginLeft="0.0dp">
        <EditText
            android:layout_width="350dp"
            android:layout_height="49.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/username"
            android:hint="Input E-mail"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
            android:inputType="textEmailAddress"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="46.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/password"
            android:hint="Input Password"
            android:textColorHint="@android:color/black"
            android:textStyle="italic"
            android:background="@android:color/white"
        android:inputType="textPassword"/>
        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:id="@+id/btnLogInNow"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="72.5dp">
            <TextView
                android:layout_width="186.5dp"
                android:layout_height="wrap_content"
                android:text="Dont have an Account?"
                android:layout_marginTop="20dp"
                android:id="@+id/textView2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="95.0dp"
                android:layout_height="45.0dp"
                android:paddingLeft="15dp"
                android:text="Sign up"
                android:layout_marginTop="20dp"
                android:id="@+id/textViewSignup"
                android:textSize="23dp"
                android:layout_toRightOf="@+id/textView2"
                android:id="@+id/textView1"
                android:textColor="@android:color/black"
                android:textStyle="italic"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>